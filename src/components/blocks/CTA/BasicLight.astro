---
// Basic Light Call To Action section
// ------------
// Description: A centered call to action section that contains: a title, text, a rating and a button.

import Button from "../../ui/Button.astro";
// - UI
import CTA from "../../ui/CTA.astro";
import Col from "../../ui/Col.astro";
import Ratings from "../../ui/Rating.astro";
import Row from "../../ui/Row.astro";
// Components
// - Layout
import Section from "../../ui/Section.astro";
---

<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Join the SassyHash Revolution!"
				text="Discover why thousands of professionals trust our platform to streamline their workflow and enhance productivity. Get started today and see the difference for yourself!"
				classes="!shadow-none"
			>
				<Ratings rating={5} text="30K customer ratings" classes="mb-4" />
				<Button size="lg" style="primary" modal="CTA"> Get started now! </Button>
			</CTA>
			<Col span="1" />
		</Col>
	</Row>
</Section>
